<div>
    <h2>Lista de Fornecedores</h2>
    <div class="d-flex justify-content-between align-items-center mx-3">
        <a href="/privado/fornecedores/novo">
            <button type="button" style="background-color: rgb(0, 0, 0);border:#fa660b solid 2px" class="btn btn-primary">Novo</button>
        </a>
             <form action="/privado/fornecedores" method="GET" class="d-flex">
          <input
                type="text"
                name="search"
                class="form-control"
                placeholder="Pesquisar fornecedores..."
                value="{{#if search}}{{search}}{{else}}""{{/if}}"
            />

                
            <button type="submit" class="btn btn-primary ms-2" style="background-color: black;border:#fa660b solid 2px" >Pesquisar</button>
        </form>
        {{#if total}}
            <div>
                Total de Registros: <strong> {{total}}</strong> 
            </div>
        {{/if}}
    </div>
    <hr style="margin: 10px;">
    <ul class="list-group mx-5 d-flex">
        {{#each dados}}
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center m-0 p-3 mb-2 bg-dark text-white">
                <a href="./fornecedores/find/{{id}}" class="nav-link active flex-fill p-2">
                    {{nome}}
                </a>
                <div>
                    <a href="./fornecedores/editar/{{id}}" class="btn btn-success ms-1 btn-form">Editar</a>
                    <a href="./fornecedores/delete/{{id}}" class="btn btn-danger ms-1 btn-form">Deletar</a>
                </div>
            </li>
        {{else}}
            <p>{{msg}}</p>
        {{/each}}
    </ul>
</div>




