
{{#if dados}}

<div class="container my-5">
<div class=" row " >


<div class=" col-md-6"><img src="/img/{{dados.imagem}}" alt="imagemProduto" height="500vh" width="500vw"></div>

    <div class="col-md-6 ">
      <!-- Seção de informações do produto -->
      <div class="card-body">
        <h2 class="card-title">{{dados.nome}}</h2>
        <p class="text-muted" style="color:#707070!important">{{dados.descricao}}</p> 
        <div class="d-flex align-items-center mb-3">
          <span class="badge bg-success me-2">Black Friday</span>
          <span class="text-warning">★ ★ ★ ★ ☆</span>
          <span class="ms-2">(2.486 avaliações)</span>
        </div>
        <h3 class="text-danger" ><span class="card-text">R$ {{dados.precoPromo}}</span>
        <small class="text-decoration-line-through text-muted">R$ {{dados.preco}}</small>
        </h3>
        <p class="text-success" style="margin-left: 1vw;"><span id="porcentagem">{{dados.preco}}</span></p>
        <p class="text-success">em 10x de R$ <span id="semJuros">{{dados.precoPromo}}</span> sem juros</p>
     
        <div class="d-grid gap-2">
          <button onclick="enviarCarrinho()"  class="btn btn-primary btn-lg" style="background-color: #fa660b;border:none;color:#000"><a style="text-decoration: none;color:#fff" href="/finalizar">Comprar agora</a></button>
          <button onclick="addItem(this)" class="btn btn-outline-secondary btn-lg" style="color: #fff;">Adicionar ao carrinho</button>
        </div>
      </div>
    </div>
</div>
</div>

<script>
    const juros = document.getElementById("semJuros").textContent
    semJuros.textContent = (parseFloat(juros)/10).toFixed(2)

    const precoNormal = document.getElementById("porcentagem").textContent
    let valorFinal = (parseFloat(precoNormal)-parseFloat(juros))/parseFloat(precoNormal)*100
    porcentagem.textContent = valorFinal.toFixed(0) +  " % OFF"

</script>
{{/if}}